<%= form_tag("/search1", method: "get") do %>
    <%= label_tag(:search, "Search:") %>
    <%= text_field_tag(:search) %>
    <%= submit_tag("Submit") %>
<% end %>

<% if(params[:search]) %>

  <% if params[:search].include?(';') %>
    ";" not allowed
  <% else %>
    <%= `find . -iname #{params[:search]};` %>
  <% end %>
<% end %>
